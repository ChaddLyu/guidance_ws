<?xml version="1.0"?>

<launch>
  <arg name="folder" default=""/>
  <node pkg="rosbag" type="play" name="bag_play" args="$(find airsim_environment)/bag/$(arg folder)/env.bag"/>

  <node pkg="rfly_phase" type="rfly_phase_Node" name="rfly_phase">
    <remap from="/guidance/left_image" to="/airsim_node/Drone0/UnderView/Scene"/>
  </node>

  <node pkg="rfly_navigation" type="rfly_navigation_Node" name="rfly_navigation">
    <remap from="/guidance/imu" to="/airsim_node/Drone0/imu/Imu"/>
    <remap from="/guidance/lidar" to="/airsim_node/Drone0/lidar/LidarSensor1"/>
  </node>

  <node pkg="airsim_environment" type="result.py" name="result"/>
  <node pkg="rosbag" type="record" name="bag_record" args="-a -O $(find airsim_environment)/bag/$(arg folder)/data_phase.bag"/>

  <node name="underview" pkg="rqt_image_view" type="rqt_image_view" args="/airsim_node/Drone0/UnderView/Scene"/>
</launch>